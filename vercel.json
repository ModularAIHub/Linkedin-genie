{
  "buildCommand": "npm ci && npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm ci && cd ../server && npm ci",
  "devCommand": "npm run dev",
  "framework": null,
  "functions": {
    "../server/index.js": {
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/../server/index.js"
    },
    {
      "source": "/(.*)",
      "destination": "/$1"
    }
  ]
}